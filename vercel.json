{
  "version": 2,
  "builds": [
    {
      "src": "packages/server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["packages/server/**"]
      }
    },
    {
      "src": "packages/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "packages/client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "packages/client/dist/$1"
    }
  ],
  "env": {
    "GROQ_API_KEY": "@groq_api_key"
  }
}